# Aigentflow Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# AI Provider Configuration
# =============================================================================

# Use Claude CLI for AI operations (recommended for development with Claude Code)
# Set to "true" to use Claude CLI, "false" to use Anthropic API directly
USE_CLAUDE_CLI=true

# Anthropic API Key (required if USE_CLAUDE_CLI=false)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Model to use (applies to both providers)
# Options: claude-sonnet-4-20250514, claude-opus-4-5-20251101, claude-3-5-haiku-20241022
AI_MODEL=claude-sonnet-4-20250514

# Maximum tokens for responses
AI_MAX_TOKENS=8192

# Temperature (0.0 - 1.0)
AI_TEMPERATURE=0.7

# =============================================================================
# Claude CLI Configuration (when USE_CLAUDE_CLI=true)
# =============================================================================

# Path to Claude CLI executable (leave empty for default 'claude')
CLAUDE_CLI_PATH=

# Claude CLI timeout in milliseconds
CLAUDE_CLI_TIMEOUT=120000

# =============================================================================
# Development Settings
# =============================================================================

# Enable development mode (uses mock responses, no AI calls)
DEV_MODE=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Project Settings
# =============================================================================

# Default compliance frameworks (comma-separated: SOC2,GDPR,HIPAA,PCI-DSS)
DEFAULT_COMPLIANCE=

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=15

# Enable Git worktrees for parallel development
ENABLE_GIT_WORKTREES=false
